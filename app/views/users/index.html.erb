<H1>メッセージ 一覧</H1>
<%= link_to "投稿画面へ", new_user_path %>
<% @users.each do |user| %>
  <p>
    <%= user.detail %>
    <%= link_to "詳細", user_path(user.id)%>
    <%= link_to "編集", edit_user_path(user.id), method: :get %>
    <%= link_to "削除", user_path(user.id), method: :delete, data: {confirm: "消去しますか？"}  %>
  </p>
<% end %>
